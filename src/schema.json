{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    { "$ref": "#/definitions/pages" },
    { "$ref": "#/definitions/stages" },
    { "$ref": "#/definitions/pageFlow" }
  ],
  "definitions": {
    "pages": {
      "type": "object",
      "required": ["pages"],
      "properties": {
        "pages": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "advanced": {
      "type": "object",
      "required": ["journeys"],
      "properties": {
        "journeys": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "pages"],
            "properties": {
              "id": { "type": "string" },
              "pages": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
